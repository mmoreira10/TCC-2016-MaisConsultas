<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".NovoCadastroLoginActivity"
    android:background="#039BE5">


    <LinearLayout
        android:id="@+id/layout_email_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_email_password"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">


    </LinearLayout>

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="Insira um e-mail"
        android:background="@drawable/fundo_caixa_texto"
        android:drawableRight="@drawable/userlogin"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_above="@+id/edtSenha"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:textColorHint="#7c7c7c" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:hint="Insira uma senha"
        android:drawableRight="@drawable/senhauser"
        android:background="@drawable/fundo_caixa_texto"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textSize="20dp"
        android:padding="15dp"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/edtEmail"
        android:layout_alignStart="@+id/edtEmail"
        android:layout_alignRight="@+id/edtEmail"
        android:layout_alignEnd="@+id/edtEmail"
        android:layout_marginBottom="10dp"
        android:textColorHint="#7c7c7c" />

    <Button
        android:id="@+id/btnAcessar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Cadastrar"
        android:background="@drawable/fundo_botoes"
        android:textSize="18dp"
        android:drawableRight="@drawable/add"
        android:textStyle="bold"
        android:textColor="#000000"
        android:padding="15dp"
        android:layout_below="@+id/edtSenha"
        android:layout_alignLeft="@+id/edtSenha"
        android:layout_alignStart="@+id/edtSenha"
        android:layout_alignRight="@+id/edtSenha"
        android:layout_alignEnd="@+id/edtSenha" />


</RelativeLayout>

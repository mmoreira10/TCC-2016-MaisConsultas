<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvEspecialidade"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="2dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvMedico"
        android:layout_below="@+id/tvEspecialidade"
        android:layout_alignLeft="@+id/tvEspecialidade"
        android:layout_alignStart="@+id/tvEspecialidade"
        android:textSize="30dp"
        android:layout_marginLeft="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/tvLocal"
        android:textSize="25dp"
        android:layout_below="@+id/tvMedico"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_room_black_18dp"
        android:layout_alignTop="@+id/tvLocal"
        android:layout_alignLeft="@+id/tvMedico"
        android:layout_alignStart="@+id/tvMedico"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="7dp" />

</RelativeLayout>
